<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
    android:background="@drawable/abc_list_divider_mtrl_alpha">

    <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="@string/title"
              android:id="@+id/titleText"
              android:layout_gravity="center_horizontal" />

       <Button
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:text="New Game"
              android:id="@+id/newGameBtn"
              android:layout_column="0"
              android:layout_gravity="center_horizontal"
              android:onClick="newGame"
           android:layout_alignParentBottom="true"
           android:layout_alignParentStart="true"
           android:background="@color/secondary_text_disabled_material_light"
           style="?android:attr/tension" />

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:id="@+id/tableLayout"
        android:layout_below="@+id/titleText"
        android:layout_centerHorizontal="true">
    <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            >
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="O"
                android:textSize="50dp"
                android:textColor="@android:color/holo_red_dark"
                android:id="@+id/topLeft"
                android:layout_column="1"
                android:width="100dp"
                android:height="100dp"
                />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="O"
                android:textSize="50dp"
                android:textColor="@android:color/holo_blue_dark"
                android:id="@+id/button"
                android:layout_column="3"
                android:width="100dp"
                android:height="100dp"
                />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="O"
                android:textSize="50dp"
                android:textColor="@android:color/holo_red_dark"
                android:id="@+id/button1"
                android:layout_column="4"
                android:width="100dp"
                android:height="100dp"
                />
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            >
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="O"
                android:textSize="50dp"
                android:textColor="@android:color/holo_blue_dark"
                android:id="@+id/button2"
                android:layout_column="1"
                android:width="100dp"
                android:height="100dp"
                />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="O"
                android:textSize="50dp"
                android:textColor="@android:color/holo_red_dark"
                android:id="@+id/button3"
                android:layout_column="3"
                android:width="100dp"
                android:height="100dp"
                />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="O"
                android:textSize="50dp"
                android:textColor="@android:color/holo_blue_dark"
                android:id="@+id/button4"
                android:layout_column="4"
                android:width="100dp"
                android:height="100dp"
                />
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            >
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="O"
                android:textSize="50dp"
                android:textColor="@android:color/holo_red_dark"
                android:id="@+id/button5"
                android:layout_column="1"
                android:width="100dp"
                android:height="100dp"
                />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="O"
                android:textSize="50dp"
                android:textColor="@android:color/holo_blue_dark"
                android:id="@+id/button6"
                android:layout_column="3"
                android:width="100dp"
                android:height="100dp"
                />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="O"
                android:textSize="50dp"
                android:textColor="@android:color/holo_red_dark"
                android:id="@+id/button7"
                android:layout_column="4"
                android:width="100dp"
                android:height="100dp"
                />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView"
                android:layout_column="2" />
        </TableRow>
    </TableLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="X"
        android:textSize="50dp"
        android:id="@+id/textViewX"
        android:layout_above="@+id/newGameBtn"
        android:layout_alignStart="@+id/tableLayout" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="0"
        android:textSize="50dp"
        android:id="@+id/textView0"
        android:layout_above="@+id/newGameBtn"
        android:layout_alignEnd="@+id/tableLayout" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SCORE"
        android:textSize="45dp"
        android:id="@+id/textView"
        android:layout_above="@+id/textViewX"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
